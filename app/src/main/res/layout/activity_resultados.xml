<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".ResultadosActivity">

    <TextView
        android:id="@+id/colorMandelin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="316dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/colorSimon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mandelin" />

    <TextView
        android:id="@+id/colorSimon"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/colorMandelin"
        app:layout_constraintTop_toTopOf="@+id/colorMarckis" />

    <TextView
        android:id="@+id/colorMecke"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="453dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/colorMarckis"
        app:layout_constraintTop_toBottomOf="@+id/tv_Mecke" />

    <TextView
        android:id="@+id/tv_Resultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:layout_marginBottom="81dp"
        android:text="@string/resultados"
        android:textAlignment="center"
        android:textColor="@color/primaryLightColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_marckis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_marckis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:text="@string/marckis"
        android:textAlignment="center"
        android:textColor="@color/primaryLightColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/colorMarckis"
        app:layout_constraintEnd_toStartOf="@+id/tv_Mecke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Resultados" />

    <TextView
        android:id="@+id/colorMarckis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="49dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_mandelin"
        app:layout_constraintEnd_toStartOf="@+id/colorMecke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_marckis" />

    <TextView
        android:id="@+id/tv_Mecke"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="23dp"
        android:text="@string/mecke"
        android:textAlignment="center"
        android:textColor="@color/primaryLightColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/colorMecke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_marckis"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_simon"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginEnd="8dp"
        android:text="@string/simon"
        android:textAlignment="center"
        android:textColor="@color/primaryLightColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_mandelin"
        app:layout_constraintTop_toTopOf="@+id/tv_mandelin" />

    <TextView
        android:id="@+id/tv_mandelin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="21dp"
        android:text="@string/mandelin"
        android:textAlignment="center"
        android:textColor="@color/primaryLightColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/colorMandelin"
        app:layout_constraintEnd_toStartOf="@+id/tv_simon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorMarckis" />


</android.support.constraint.ConstraintLayout>